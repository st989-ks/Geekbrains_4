<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desk_11_132">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout">

            <TextView
                android:id="@+id/numberFieldWindow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                style="@style/TextViewMiddle"
                android:focusable="false"
                android:gravity="center_vertical|end"
                android:paddingEnd="@dimen/margin"
                android:text="@string/test"
                android:textSize="@dimen/textViewSize"
                tools:ignore="NestedWeights,RtlSymmetry,SpUsage" />

            <TextView
                android:id="@+id/numberViewWindow"
                style="@style/TextViewStart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:focusable="false"
                android:gravity="start"
                android:paddingStart="@dimen/margin"
                android:text="@string/test"
                android:textSize="@dimen/textViewSize"
                tools:ignore="NestedWeights,RtlSymmetry,SpUsage" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/LinerViewBottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ButtonPanel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonClear"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonClear" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonSquaring"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonSquaring" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonRoot"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonRoot" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonWipe"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonWipe" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstButtonPanel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonSeven"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonSeven" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonEight"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonEight" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonNine"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonNine" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonSplit"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonSplit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondButtonPanel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonFour"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonFour" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonFive"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonFive" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonSix"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonSix" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonMultiply"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonMultiply" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdButtonPanel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonOne"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonOne" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonTwo"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonTwo" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonThree"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonThree" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonMinus"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonMinus" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forthButtonPanel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonDot"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonDot" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonZero"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonZero" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonEqualTo"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonEqualTo" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonPlus"
                    style="@style/ButtonFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/ButtonPlus" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

